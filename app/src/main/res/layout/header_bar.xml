<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/header_color"
    >

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="81dp"
        android:layout_height="79dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nametextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ethiopian Premier league"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_imageView" />

    <TextView
        android:id="@+id/addrestextview"
        android:layout_width="365dp"
        android:layout_height="33dp"
        android:text="address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nametextView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/plus_sign_imageview"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:src="@drawable/plus_sign"
        app:layout_constraintBottom_toBottomOf="@+id/logo_imageView"
        app:layout_constraintEnd_toEndOf="@+id/logo_imageView" />

</LinearLayout>
